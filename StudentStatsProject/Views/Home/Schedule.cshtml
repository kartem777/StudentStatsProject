<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
@using StudentStatsProject.Models;
@model Student
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Schedule" asp-route-studentId="@Model.Id">Schedule</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Gradebook" asp-route-studentId="@Model.Id">Gradebook</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<h2>Schedule</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lesson</th>
            <th>Teacher</th>
            <th>Classroom</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model.ScheduledLessons)
        {
            <tr>
                <td>@lesson.Name</td>
                <td>@lesson.TeacherName</td>
                <td>@lesson.Classroom</td>
                <td>@lesson.StartTime.ToString("g")</td>
                <td>@lesson.EndTime.ToString("g")</td>
                <td>
                    <a asp-action="LessonInfo" asp-route-studentId="@Model.Id" asp-route-lessonId="@lesson.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
